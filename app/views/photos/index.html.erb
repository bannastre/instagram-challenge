<h1>Photos:</h1>

<div id="photos">
  <% @photos.each do |photo| %>
      <div class="container">

        <div class="photo_header">
          <p><%= photo.name %></p>
        </div>

        <div class="photo_container" id="photo_id_<%= photo.id %>">
          <img class="photo" src="<%= photo.photo_file %>" alt="<%= photo.name %>">
        </div>

        <div class="comment_container" id="photo_comments_<%= photo.id %>">
          <%= button_to "Comment", photo, method: :get %>
          <% photo.comments.each do |comment| %>
            <p><%= comment.text %></p>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
